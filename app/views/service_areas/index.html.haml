%h1 ServiceAreas/Index
= form_tag service_areas_path, :method => 'get' do
  %p
    = label_tag(:searchcity, "City:")
    = text_field_tag :searchcity, params[:searchcity]
    = label_tag(:searchloc, "Location:")
    = text_field_tag :searchloc, params[:searchloc]
    = label_tag(:searchpincode, "Pincode:")
    = text_field_tag :searchpincode, params[:searchpincode]
    = submit_tag "Search", :name => nil
%h1 All serviceareas
%ul
  - @service_areas.each do |service_area|
    %li
      = link_to service_area.vendor.name, service_area
=paginate @service_areas, theme: 'twitter-bootstrap-3'